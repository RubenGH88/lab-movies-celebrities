<h2>Edit a Movie</h2>
<br>
<form action="/{{movie.id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{movie.title}}"/>
  </label>
  <br>
  <label> Genre:
    <input type="text" name="genre" />
  </label>
  <br>
   <label> Plot:
    <input type="text" name="plot"/>
  </label>
  <br>
   <label> Cast:</label>


       
    <select multiple name="cast" id="cast" >
         {{#each celebrity}}
         <option value={{id}}>{{name}}</option>
    
  {{/each}}
    </select>
  
  <br>
<br>
  <button type="submit"> Add </button>
</form>